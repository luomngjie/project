/* components/popup/popup.wxss */
/* 弹窗层 */
.zan-popup{
  width: 100%;
  height: 100%;
  z-index: 1000000;
  top: 0;
  bottom: 0;
  position: fixed;
  background:rgba(0, 0, 0, 0.4);
}

.zan-popup__container{
  height: 100%;
}

.zan-btns{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.img{
  border-radius: 10rpx;
  width: 500rpx;
  height: 600rpx;
  opacity: 1;
}