/* components/indexComponent/indexComponent.wxss */ 
.swiper-item{
  height:100%;width:100%;
}
.iconSwiper{
  overflow: hidden;
	height: 0;
	padding-bottom: 58%;
}
.icons{
  position: relative;font-size: 13px;
  width:20%;overflow: hidden;
  padding-bottom: 25%;
  float:left;height:0;
}
.iconImg{
  top:0;bottom:.44rem;
  left:0;box-sizing:border-box;
  right:0;padding:20rpx;
}
.swiper-img{height:100rpx;display: block;margin:0 auto;width:100%;}
.icon-desc{top:0;left:0;bottom:0;right:0;text-align: center;}
/**商品列表**/
.shops{
  display: flex;flex-wrap: wrap;margin-top:1rem;
  flex-direction: row;background: #eee;
}
.shops-list{
  width:47%;padding:.2rem;margin:.5rem .1rem .3rem .1rem;background:#fff;border-radius:10px;
}
.shop-img{
  height:400rpx;margin:0 0 .3rem 0;
}
.shop-img-detail{
  width:100%;height:100%;display: block;border-radius: 10px 10px 0 0;
}
.shop-info{
  font-size: 13px;
}
.shop-info-title{
  margin:.2rem 0;
  padding:.1rem .3rem 0 .1rem;
  height:0;padding-bottom:80rpx ;
  display: -webkit-box;white-space: normal;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  
}
.shop-info-content{
  display: flex;flex-direction: row;flex-wrap: nowrap;
}
.shop-price{
  flex: 1;text-align:center;
}
.shop-similar{
  flex:1;text-align:center;
}