<view class="container">
  <view class="container-slide-bar">
    <view class="scroll-tab">
      <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
          <view class="nav-item {{currentTab == idx ? 'active' : ''}}"  data-current="{{idx}}" bindtap="switchNav">{{navItem.text}}</view>
        </block>
      </scroll-view>
    </view>
    <view class="fixed-tab">
      <text class='iconfont icon-wanfajieshao11' style="font-size:20px;"></text>
      <text class="category">分类</text>
    </view>
  </view>
  <!-- 页面内容 -->
  <!--bindchange="switchTab" -->   
    <swiper class="tab-box" current="{{currentTab}}" duration="300">   
        <swiper-item wx:for="{{navData}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx" class="tab-content" catchtouchmove="stopTouchMove">
           <indexComponent wx:if="{{tabItem.typeId == 0}}"></indexComponent>
           <otherComponent wx:else></otherComponent>
        </swiper-item>
    </swiper>
   
</view>